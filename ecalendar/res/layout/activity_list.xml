                            android:layout_marginLeft="5dip"
                            android:text="@string/time1"
                            android:textColor="#194b15" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <!-- Fifth Row - 5st Activity -->

            <TableRow
                android:id="@+id/activity5Row"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:orientation="horizontal" >

                <!-- Left side: show person who post the activity -->

                <TextView
                    android:id="@+id/activity5PosterView"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/photo1"
                    android:text="@string/person1" />

                <!-- Right side: show the activity -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_monthview_activitysection_black_1"
                    android:orientation="vertical"
                    android:padding="3dip" >

                    <!-- activity title -->

                    <TextView
                        android:id="@+id/activity5View"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:gravity="left|top"
                        android:paddingLeft="15dip"
                        android:text="@string/activity5"
                        android:textColor="#FFFFFF" />

                    <!-- activity attachment icon, comment icon, post datetime -->

                    <LinearLayout
                        android:id="@+id/activity5InfoView"
                        android:layout_width="match_parent"
