                            android:background="@drawable/icon_comment"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="3"
                            android:textColor="#194b15" />

                        <TextView
                            android:id="@+id/activity4DateView"
                            android:layout_width="wrap_content"
