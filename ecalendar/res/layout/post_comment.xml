<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_monthview_sample"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    tools:context="com.interest.ecalendar.activity.CommentActivity"
    tools:ignore="MergeRootFrame" >

    <!-- height: 30dip -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="230dip"
            android:gravity="left"
            android:src="@drawable/cancel_icon" />

        <!-- <TextView -->
        <!-- android:id="@+id/date" -->
        <!-- android:layout_width="70dip" -->
        <!-- android:layout_height="20dip" -->
        <!-- android:gravity="center_horizontal" -->
        <!-- android:background="#70FFFFFF" -->
        <!-- android:layout_marginLeft="70dip" -->
        <!-- android:layout_marginRight="70dip" -->
        <!-- android:text="2014-07-29" /> -->

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@drawable/save_icon" />
    </LinearLayout>

    <!-- height: 40dip -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#70FFFFFF"
        android:drawableRight="@drawable/post_pic_icon"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dip"
        android:paddingRight="10dip"
        android:text="Re - This is summary"
        android:textColor="#111111"
        android:textSize="@dimen/label_font_size" />

    <!-- height: 230dip -->

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dip"
        android:background="#70FFFFFF"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="10"
        android:paddingLeft="8dip"
        android:paddingTop="12dip"
        android:textSize="@dimen/label_font_size"
        android:scrollHorizontally="true"
        android:text="When using the Cordova APIs, an app can be built without any native code (Java, Objective-C, etc) from the app developer. "
        android:textColor="#194b15" >

        <requestFocus />
    </EditText>
	
    <!-- height: 100dip -->
    <!-- Fragment, Menu Bar -->

    <fragment
        android:id="@+id/menu_fragment"
        android:name="com.interest.ecalendar.fragment.MenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:gravity="bottom|center_horizontal"/>

</LinearLayout>