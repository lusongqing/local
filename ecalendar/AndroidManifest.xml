<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.interest.ecalendar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/notitle" >
        <activity
            android:name="com.interest.ecalendar.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.CommentActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.ListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.MonthViewActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.PostActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.ProfileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.ListPictureActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.PostPictureActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.interest.ecalendar.activity.PostProfileActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>